            </intent-filter>
        </activity>
        <activity android:name=".LogInActivity" />
        <activity
            android:name=".dept.post.PostActivity"
            android:label="@string/title_activity_post"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
